<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:backgroundTint="#EDEDED"
    tools:context=".set_profile_activity">

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="65dp"
      android:layout_height="65dp"
      android:layout_marginTop="24dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/mticon_1" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:fontFamily="@font/audiowide_regular"
      android:text="Your profile"
      android:textColor="#CE0202"
      android:textSize="30dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3" />

  <ImageView
      android:id="@+id/imageViewProfPicSet"
      android:layout_width="130dp"
      android:layout_height="130dp"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      app:srcCompat="@drawable/profile_pic_add" />

  <EditText
      android:id="@+id/editTextSetNick"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_marginTop="40dp"
      android:background="@drawable/edittext_background"
      android:ems="10"
      android:fontFamily="@font/audiowide_regular"
      android:hint="Nick"
      android:inputType="text"
      android:padding="12dp"
      android:textColorHint="#7A6D6D"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageViewProfPicSet" />

  <EditText
      android:id="@+id/editTextSetName"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_marginTop="50dp"
      android:background="@drawable/edittext_background"
      android:ems="10"
      android:fontFamily="@font/audiowide_regular"
      android:hint="Name"
      android:inputType="text"
      android:textColorHint="#7A6D6D"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextSetNick" />

  <EditText
      android:id="@+id/editTextSetSurname"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/edittext_background"
      android:ems="10"
      android:fontFamily="@font/audiowide_regular"
      android:hint="Surname"
      android:inputType="text"
      android:textColorHint="#7A6D6D"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextSetName" />

  <Button
      android:id="@+id/buttonSetSave"
      android:layout_width="99dp"
      android:layout_height="55dp"
      android:layout_marginTop="38dp"
      android:backgroundTint="#000000"
      android:fontFamily="@font/audiowide_regular"
      android:text="Save"
      android:textSize="18dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextSetSurname" />
</androidx.constraintlayout.widget.ConstraintLayout>